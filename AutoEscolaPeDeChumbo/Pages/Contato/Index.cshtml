@page
@model AutoEscolaPeDeChumbo.Pages.Contato.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Formulário de contato</h1>

<p>
    <a asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato[0].Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contato) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
