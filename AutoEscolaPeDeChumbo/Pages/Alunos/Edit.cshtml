@page
@model AutoEscolaPeDeChumbo.Pages.Alunos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<p class="h1">Editar</p>

<p class="h3">Aluno</p>
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Aluno.ID" />

                    <div class="form-group">
                        <label asp-for="Aluno.NomeAluno" class="control-label"></label>
                        <input asp-for="Aluno.NomeAluno" class="form-control" />
                        <span asp-validation-for="Aluno.NomeAluno" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.Cpf" class="control-label"></label>
                        <input asp-for="Aluno.Cpf" class="form-control" />
                        <span asp-validation-for="Aluno.Cpf" class="text-danger"></span>
                    </div>
                </div>
            </div>
        

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.Idade" class="control-label"></label>
                        <input asp-for="Aluno.Idade" class="form-control" />
                        <span asp-validation-for="Aluno.Idade" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.Telefone" class="control-label"></label>
                        <input asp-for="Aluno.Telefone" class="form-control" />
                        <span asp-validation-for="Aluno.Telefone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.Endereco" class="control-label"></label>
                        <input asp-for="Aluno.Endereco" class="form-control" />
                        <span asp-validation-for="Aluno.Endereco" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.ValorTreinamento" class="control-label"></label>
                        <input asp-for="Aluno.ValorTreinamento" class="form-control" />
                        <span asp-validation-for="Aluno.ValorTreinamento" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Aluno.FormaPagamento" class="control-label"></label>
                        <input asp-for="Aluno.FormaPagamento" class="form-control" />
                        <span asp-validation-for="Aluno.FormaPagamento" class="text-danger"></span>
                    </div>
                </div>
            </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
</form>


<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
