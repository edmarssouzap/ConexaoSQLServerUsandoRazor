@page
@model AutoEscolaPeDeChumbo.Pages.Alunos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p class="h1">Aluno</p>

<p>
    <a asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].NomeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].ValorTreinamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno[0].FormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Aluno) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTreinamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
