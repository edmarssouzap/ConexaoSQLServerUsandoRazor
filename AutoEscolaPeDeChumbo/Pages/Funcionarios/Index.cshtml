@page
@model AutoEscolaPeDeChumbo.Pages.Funcionarios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionários</h1>

<p>
    <a asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].IDfuncao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].IDAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario[0].Aluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Funcionario) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDfuncao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
